<odoo>
    <record id="view_form_my_model" model="ir.ui.view">
        <field name="name">my.model.form</field>
        <field name="model">my.model</field>
        <field name="arch" type="xml">
            <form string="Planning des chambres">
                <sheet>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <separator string="Planning des chambres (horizontal)" colspan="2"/>
                    <field name="day_list_html" readonly="1" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_my_model" model="ir.actions.act_window">
        <field name="name">Planning des Chambres</field>
        <field name="res_model">my.model</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="menu_date_interval_root"
              name="Gestion des Intervalles"
              sequence="10"/>

    <menuitem id="menu_date_interval_model"
              name="Planning des Chambres"
              parent="menu_date_interval_root"
              action="action_my_model"
              sequence="20"/>
</odoo>
