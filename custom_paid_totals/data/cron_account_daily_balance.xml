<odoo>
    <data noupdate="1">
        <record id="ir_cron_create_daily_balance" model="ir.cron">
            <field name="name">Cr√©er Balance Quotidienne</field>
            <field name="model_id" ref="model_account_daily_balance"/>
            <field name="state">code</field>
            <field name="code">model.cron_create_daily_balance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <!-- nextcall : date/heure actuelle -->
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
