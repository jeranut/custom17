<odoo>
  <record id="view_invoice_create_project_task_wizard" model="ir.ui.view">
    <field name="name">invoice.create.project.task.wizard.form</field>
    <field name="model">invoice.create.project.task.wizard</field>
    <field name="arch" type="xml">
      <form string="Créer tâche projet">
        <group>
          <field name="project_id" required="1" options="{'no_create': False}"/>
        </group>
        <footer>
          <button name="action_confirm" string="Créer" type="object" class="btn-primary"/>
          <button string="Annuler" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_invoice_create_project_task_wizard" model="ir.actions.act_window">
    <field name="name">Créer tâche projet</field>
    <field name="res_model">invoice.create.project.task.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_invoice_create_project_task_wizard"/>
    <field name="target">new</field>
  </record>
</odoo>
